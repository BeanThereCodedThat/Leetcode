class Solution {
    public int[] searchRange(int[] nums, int target) 
    {
        if(nums.length==0)
        return new int[] {-1,-1};
        int first = findOccurrence(nums, target, true);
        int last = findOccurrence(nums, target, false);
        return new int[]{first, last};
    }

    private int findOccurrence(int[] nums, int target, boolean isFirst) 
    {
        int low = 0, high = nums.length - 1;
        int result = -1;
        while (low <= high) 
        {
            int mid = low + (high - low) / 2;
            if (nums[mid] == target) {
                result = mid; 
                if (isFirst) {
                    high = mid - 1; 
                } else {
                    low = mid + 1;  
                }
            } else if (nums[mid] < target) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return result;
    }
}
