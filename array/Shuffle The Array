class Solution 
{
    public int[] shuffle(int[] nums, int n) 
    {
        int i=0,j=n;
        int arr[]=new int[2*n];
        for(int k=0;k<2*n;k++)
        {
            if(k%2==0)
            {
            arr[k]=nums[i];
            i++;
            }
            else
            {
            arr[k]=nums[j];
            j++;
            }
        }
        return arr;
    }
}
